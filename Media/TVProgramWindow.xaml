        <TextBox x:Name="yearTV" HorizontalAlignment="Left" Height="28" Margin="115,382,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" MaxLength="4" IsUndoEnabled="False" PreviewTextInput="YearTV_PreviewTextInput"/>
