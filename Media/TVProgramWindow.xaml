        <Label Content="Актеры" HorizontalAlignment="Left" Margin="34,326,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="actorsTV" HorizontalAlignment="Left" Height="28" Margin="115,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="472"/>
